# Bharat Biz-Agent Production Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# SECURITY CONFIGURATION (Required)
# =============================================================================
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=your-32-character-hex-encryption-key-here
# Generate with: openssl rand -base64 32
SESSION_SECRET=your-session-secret-here
# Generate secure API key for admin access
ADMIN_API_KEY=bbz_your-secure-admin-api-key-here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# MongoDB Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your-secure-mongodb-password
MONGO_DATABASE=bharat_biz_agent

# Redis Configuration
REDIS_PASSWORD=your-secure-redis-password

# =============================================================================
# GOOGLE CLOUD & AI CONFIGURATION (Required)
# =============================================================================
# Google Cloud Project ID
GOOGLE_CLOUD_PROJECT_ID=your-gcp-project-id

# Google Gemini AI API Key
# Get from: https://ai.google.dev/
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-1.5-flash
GEMINI_MAX_REQUESTS_PER_MINUTE=60
GEMINI_MAX_TOKENS_PER_REQUEST=1000
GEMINI_RETRY_ATTEMPTS=3
GEMINI_RETRY_DELAY=1000

# =============================================================================
# COMMUNICATION PLATFORMS
# =============================================================================
# Telegram Bot Configuration
# Get from: https://t.me/BotFather
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here

# WhatsApp Business API Configuration
# Get from: https://business.facebook.com/
WHATSAPP_API_KEY=your-whatsapp-api-key
WHATSAPP_PHONE_NUMBER_ID=your-whatsapp-phone-number-id
WHATSAPP_VERIFY_TOKEN=your-whatsapp-verify-token
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=production
PORT=3002
FRONTEND_URL=https://yourdomain.com
LOG_LEVEL=info

# CORS Origins (comma-separated)
CORS_ORIGINS=https://yourdomain.com,https://admin.yourdomain.com

# =============================================================================
# OPTIONAL: SSL/HTTPS Configuration
# =============================================================================
# Uncomment if using HTTPS with nginx
# SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
# SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# =============================================================================
# DEVELOPMENT ONLY (Do not use in production)

# =============================================================================
# CORS_ORIGINS=http://localhost:3000,http://localhost:5173
# FRONTEND_URL=http://localhost:3000
