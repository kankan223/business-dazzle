# Bharat Biz-Agent - Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# SECURITY - REQUIRED
# ============================================
# Generate a secure encryption key:
# openssl rand -hex 32
ENCRYPTION_KEY= your-secure-encryption-key-here-32bytes-long

# ============================================
# DATABASE - REQUIRED
# ============================================
MONGODB_URI=mongodb://localhost:27017/bharat_biz_agent

# ============================================
# AI SERVICE - REQUIRED
# ============================================
# Get Gemini API key from Google AI Studio (free)
# https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# ============================================
# ADMIN SECURITY
# ============================================
ADMIN_API_KEY=your_admin_api_key_here

# ============================================
# WHATSAPP BUSINESS API
# ============================================
# Get these from Meta Business Platform:
# https://business.facebook.com/
WHATSAPP_API_KEY=your-whatsapp-api-key
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_VERIFY_TOKEN=your-webhook-verify-token

# ============================================
# TELEGRAM BOT
# ============================================
# Create a bot with @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:5173
